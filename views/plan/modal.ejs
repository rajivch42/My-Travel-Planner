<div id="add-place-modal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <h2>Add to which day?</h2>
        <form id="add-place-form">
    <div class="form-group">
        <label for="day-select">Add to which day?</label>
        <select name="day" id="day-select" class="modal-select">
            <% trip.itinerary.forEach(day => { %>
                <option value="<%= day._id %>"><%= day.title %> - <%= day.dayDate.toDateString() %></option>
            <% }); %>
        </select>
    </div>
    
    <div class="form-group-inline">
        <div class="form-group">
            <label for="place-time">Set Time</label>
            <input type="time" id="place-time" name="time">
        </div>
        <div class="form-group">
            <label for="place-cost">Set Cost ( ₹ )</label>
            <input type="number" id="place-cost" name="cost" placeholder="0" min="0" value="0">
        </div>
    </div>
    <div class="modal-buttons">
        <button type="submit" class="btn btn-primary">Add Place</button>
        <button type="button" id="close-modal-btn" class="btn btn-secondary">Cancel</button>
    </div>
</form>
    </div>
</div>
    
<div id="edit-place-modal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <h2>Edit Place Details</h2>
        <form id="edit-place-form">
            <input type="hidden" id="edit-day-id" name="dayId">
            <input type="hidden" id="edit-place-id" name="placeId">

            <div class="form-group-inline">
                <div class="form-group">
                    <label for="edit-place-time">Set Time</label>
                    <input type="time" id="edit-place-time" name="time">
                </div>
                <div class="form-group">
                    <label for="edit-place-cost">Set Cost (₹)</label>
                    <input type="number" id="edit-place-cost" name="cost" placeholder="0" min="0">
                </div>
            </div>
            <div class="modal-buttons">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <button type="button" id="close-edit-modal-btn" class="btn btn-secondary">Cancel</button>
            </div>
        </form>
    </div>
</div>

<div id="confirm-modal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <h2>Confirm Deletion</h2>
        <p>Are you sure you want to delete this place? This action cannot be undone.</p>
        <div class="modal-buttons">
            <button type="button" id="confirm-delete-btn" class="btn btn-danger">Delete</button>
            <button type="button" id="cancel-delete-btn" class="btn btn-secondary">Cancel</button>
        </div>
    </div>
</div>
<div id="share-modal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <h2>Share Your Trip</h2>
        <p>Anyone with this link can view a read-only version of your itinerary.</p>
        <div class="share-link-container">
            <input type="text" id="share-url-input" readonly value="Generating link...">
            <button id="copy-link-btn" class="btn btn-primary">Copy Link</button>
        </div>
        <div class="modal-buttons" style="justify-content: flex-end;">
             <button type="button" id="close-share-modal-btn" class="btn btn-secondary">Close</button>
        </div>
    </div>
</div>